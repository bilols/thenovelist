{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://novelist.ai/schemas/outline.schema.v1.json",
  "title": "Novelist Outline (v1)",
  "type": "object",
  "required": [
    "header",
    "outlineProgress",
    "premise",
    "totalWordCount",
    "chapterCount"
  ],
  "additionalProperties": false,

  "definitions": {
    "chapter": {
      "type": "object",
      "required": [ "number", "summary", "beats" ],
      "additionalProperties": false,
      "properties": {
        "number": { "type": "integer", "minimum": 1 },
        "summary": { "type": "string", "minLength": 1 },
        "beats": {
          "type": "array",
          "minItems": 1,
          "items": { "type": "string", "minLength": 1 }
        },
        "themes": {
          "type": "array",
          "minItems": 1,
          "items": { "type": "string", "minLength": 1 }
        },
        "sub_plots": {
          "type": "array",
          "items": { "type": "string", "minLength": 1 }
        }
      }
    },

    "storyArcAct": {
      "type": "object",
      "required": [ "act", "definition", "beats", "sub_plots" ],
      "additionalProperties": false,
      "properties": {
        "act":        { "type": "string", "minLength": 1 },
        "definition": { "type": "string", "minLength": 1 },
        "beats": {
          "type": "array",
          "default": [],
          "items": { "type": [ "string", "object" ] }
        },
        "sub_plots": {
          "type": "array",
          "default": [],
          "items": { "type": "string", "minLength": 1 }
        }
      }
    }
  },

  "properties": {
    "header": {
      "type": "object",
      "required": [ "schemaVersion", "dateCreated" ],
      "additionalProperties": true
    },

    "outlineProgress": {
      "type": "string",
      "enum": [
        "Init",
        "PremiseExpanded",
        "ArcDefined",
        "CharactersOutlined",
        "SubPlotsDefined",
        "BeatsExpanded",
        "StructureOutlined",
        "BeatsDetailed",
        "Finalized"
      ]
    },

    "premise":          { "type": "string", "minLength": 1 },
    "premiseExpanded":  { "type": "string" },

    "storyArc": {
      "type": "array",
      "minItems": 3,
      "items": { "$ref": "#/definitions/storyArcAct" }
    },

    "characters": { "type": "array" },

    "totalWordCount": { "type": "integer", "minimum": 1000 },
    "chapterCount":   { "type": "integer", "minimum": 1 },

    "chapters": {
      "type": "array",
      "items": { "$ref": "#/definitions/chapter" }
    }
  }
}
